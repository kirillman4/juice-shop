pipeline{
    environment{
        registry = "kirillman4"
        imageName = "testapp"
        registryCred = "1488rsk853"
        gitProject = "https://github.com/kirillman4/juice-shop"
    }
    agent any
    options{
        timeout(time: 1, unit: 'HOURS')
    }
    stages{
        stage('preparation'){
            steps{
                 deleteDir()
            }
        }
        stage('get src from git'){
            steps{
                git url: "${gitProject}"
            }
        }
        stage ('run tests'){
            steps{
                echo 'npm run test'
            }
        }
        stage ('build docker'){
            steps{
                script{
                    dockerImage = docker.build("${registry}/${imageName}")
                }
            }
        }
        stage('docker publish'){
            steps{
                script{
                    docker.withRegistry("${registry}/${imageName}", "{$registryCred}"){
                        dockerImage.push()
                    }
                }
            }
        }
        stage ('cleaning'){
            steps{
                sh 'docker rmi -f $(docker images -a -q)'
            }
        }
    }
}